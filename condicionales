const starWars7 = 'Star Wars: El despertar de la fuerza'
const pgStarWars7 = 13

const nameSacha = 'Sacha'
const ageSacha = 26


const nameSanti = 'Santi'
const ageSanti = 12

function canWatchStarWars7(name, age, isWithAdult) {
    if (age >= pgStarWars7) {
        alert(`${name} puede ver ${starWars7}`)
    } else if {isWithAdult} {
        alert(`${name} puede ver pasar a ver ${starWars7} auqnue tiene ${age} esta acompa√±ada de adulto`)
    }
    
    
    else {
        alert(`${name} no puede verla porque tiene ${age}`)
    }
}

canWatchStarWars7(nameSacha, ageSacha)

canWatchStarWars7(nameSanti, ageSanti, true)